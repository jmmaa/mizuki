{
  "name": "mizuki",
  "version": "1.1.6-dev",
  "description": "a tiny javascript library that helps you create paginated behavior for your app components.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npx del-cli --force './dist/*' && tsc && esbuild --bundle src/index.ts --outfile=dist/index.js --format=esm --minify",
    "build-dev": "tsc && esbuild --bundle src/index.ts --outfile=dist/index.js --format=esm",
    "dev": "watchexec -i 'src/*' yarn build-dev",
    "test": "jest"
  },
  "author": "jmmaa",
  "repository": {
    "url": "https://github.com/jmmaa/mizuki"
  },
  "license": "MIT",
  "type": "module",
  "private": false,
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.7",
    "del-cli": "^5.0.0",
    "esbuild": "^0.15.12",
    "jest": "^29.2.2",
    "request": "^2.88.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "watchexec-bin": "^1.0.0"
  },
  "dependencies": {}
}
